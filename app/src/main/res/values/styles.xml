<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextLabel">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/holo_blue_bright</item>
        <item name="android:textSize">16sp</item>
        <!-- Label color in TRUE state and bar  color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/holo_blue_bright</item>
        <item name="android:textColorHighlight">@android:color/holo_blue_bright</item>
    </style>

    <style name="TextLayoutErrorText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/pink_300</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NavigationTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textColor">#454545</item>
    </style>

</resources>
