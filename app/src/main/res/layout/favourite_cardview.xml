<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/favourite_cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:foreground="@drawable/ripple"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/favourite_cardView_image"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:scaleType="centerCrop"
            android:src="@drawable/concert"
            app:civ_border_color="#FF000000"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/favourite_recycler_view_item_title_text"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="IIIT Delhi TechFest 2k16 at DU Campus"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/like"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/favourite_recycler_view_item_time_left_text"
                        android:layout_width="132dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:text="4 Days to go"
                        android:textAllCaps="true"
                        android:textColor="@color/walkthrough_background"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/favourite_recycler_view_item_time_text"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp"
                        android:text="17:45 hrs"
                        android:textAllCaps="true"
                        android:textColor="@color/walkthrough_background"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/favourite_recycler_view_item_venue_text"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="LT2"
                        android:textAllCaps="true"
                        android:textColor="@color/walkthrough_background"
                        android:textSize="12sp"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/favourite_recycler_view_item_anchor_image"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/circle_background"
                    android:elevation="8dp"
                    android:src="@drawable/anchor"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

