<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/ic_link"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <EditText
            android:id="@+id/submission_forum_link_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/link_name"
            android:inputType="textShortMessage|textCapWords"
            android:theme="@style/AddEventEditTextStyle"/>

        <EditText
            android:id="@+id/submission_forum_link_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/valid_link"
            android:inputType="textWebEditText"
            android:theme="@style/AddEventEditTextStyle"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/submission_forum_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:foreground="@drawable/ripple"
        android:src="@drawable/ic_remove"
        android:visibility="gone"/>

</LinearLayout>