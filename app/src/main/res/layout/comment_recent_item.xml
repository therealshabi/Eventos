<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="32dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_recent_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14103487"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/comment_recent_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="14/12/16"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textSize="12sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/comment_recent_item_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Very bad event, maybe work hard next time!"
        />

</LinearLayout>